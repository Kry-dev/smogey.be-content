<!DOCTYPE html>
html(lang="en")
	include global/head
	+head(
		'Initiatives sur Tournai'
	)
	include mixin/all-mixin
	body.homepage
		.wrapper
			.header-template
				img(src="/assets/img/global/header.jpg")
			section.main
				.container
					article
						.initiv-cards
							.container-fluid.p-0
								.row.mx-0.mb-20
									.col-md-4.px-1
										.card
											.card-body
												img(src='assets/img/initi/initi-01.png', alt='#')
											.card-header
												h5.card-title.text-center Mobilité
											.card-footer
												a.btn.btn-pink.w-100(href='#') En savoir plus
									.col-md-4.px-1
										.card
											.card-body
												img(src='assets/img/initi/initi-02.png', alt='#')
											.card-header
												h5.card-title.text-center Réduction des déchets
											.card-footer
												a.btn.btn-success.w-100(href='#') En savoir plus
									.col-md-4.px-1
										.card
											.card-body
												img(src='assets/img/initi/initi-03.png', alt='#')
											.card-header
												h5.card-title.text-center Economie locale
											.card-footer
												a.btn.btn-warning.w-100(href='#') En savoir plus
								.row.mx-0.mb-20
									.col-md-6.px-1
										a(href="#").btn.btn-primary.btn-block
											i.fa.fa-map-marker
											| Voir toute les initiatives
									.col-md-6.px-1
										a(href="#").btn.btn-pink-dark.btn-block
											i.fa.fa-user
											| Trouver un ambassadeur
								.row.mx-0.mb-20
									.col-md-12.px-1
										form(action='', method='post')#initiv-search.initiv-search
											input.form-control(type='text', size='60', placeholder="Rechercher une initiative sur Tournai")
											button.btn.btn-search(type='submit')
												i.fa.fa-search
								.row.mx-0.mb-20
									include global/slider

